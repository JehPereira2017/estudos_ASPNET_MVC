@model IEnumerable<CadastroCNPJ.Models.Estabelecimento>

@{
    ViewData["Title"] = "Index";
}

<h2>Cadastro Estabelecimento</h2>

<p>
    <a asp-action="Create" class="btn btn-success active" role="button" aria-pressed="true">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Razão Social
            </th>
            <th>
                CNPJ
            </th>
            <th>
                Email
            </th>
            <th>
                Data do Cadastro
            </th>
            <th>
                Telefone
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Razaosocial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCadastro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusEstabelecimentoNavigation.DescricaoStatus)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdEstabelecimento">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdEstabelecimento">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdEstabelecimento">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
